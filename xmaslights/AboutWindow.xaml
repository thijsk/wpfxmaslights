<Window x:Class="xmaslights.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About" Height="300" Width="300">
    <Grid>
        <Button Height="23" Margin="0,0,12,12" Name="button1" VerticalAlignment="Bottom" Click="button1_Click" HorizontalAlignment="Right" Width="75">Close</Button>
        <Button Height="23" Margin="65,0,64,104" Name="button2" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Cursor="Hand" Click="button2_Click">
            <Button.BindingGroup>
                <BindingGroup Name="{x:Null}" NotifyOnValidationError="False" />
            </Button.BindingGroup> Go to Brokenwire.Net
        </Button>
        <TextBox Margin="12,12,12,0" Name="textBox1" TextWrapping="WrapWithOverflow" Height="88" VerticalAlignment="Top">WPF Christmas Lights is an application written by Thijs Kroesbergen and is published under the GPL license. For the complete source code and more information visit the Codeplex page.</TextBox>
        <Button Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Cursor="Hand" Height="23" Margin="65,106,64,0" Name="button3" VerticalAlignment="Top" Click="button3_Click">
            <Button.BindingGroup>
                <BindingGroup Name="{x:Null}" NotifyOnValidationError="False" />
            </Button.BindingGroup> Go to Codeplex
        </Button>
    </Grid>
</Window>
